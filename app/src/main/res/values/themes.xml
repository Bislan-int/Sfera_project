<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SferaProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonBorderedStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="strokeColor">@color/secondary_color</item>
        <item name="backgroundTint">@color/button_background</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:lineSpacingExtra"> -1sp</item>
    </style>

    <style name="CornerImageStyle" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <!--Switch ON-->
        <item name="colorControlActivated">@color/secondary_color</item>
        <!--Switch OFF-->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="TextIDStyle">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-1.11sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextRatingStyle">
        <item name="android:lineSpacingExtra">-5sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextNameStyle">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-1.11sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextLanguageAndCityStyle">
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:translationY">-0.53sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="ButtonChooseStyle">
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:translationY">-0.53sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextAboutStyle">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.74sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextEditAboutStyle">
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationY">-2.32sp</item>
